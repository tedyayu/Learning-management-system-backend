{
  "compilerOptions": {
    "target": "ES2020",                                // Upgrade from ES6 for modern JS support
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types"],           // Ensure custom/global types are resolved
    "moduleResolution": "node",                       // Needed to resolve node-style imports
    "resolveJsonModule": true                         // Optional: If you import .json files
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}